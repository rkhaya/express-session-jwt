generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    ADMIN
    MODERATOR
    OWNER
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    username  String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    role      Role     @default(USER)
}
